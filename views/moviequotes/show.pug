include ../partials/header
include ../partials/menu

block content
    div(class="ui container new-container")
        //- back/delete/edit buttons
        div(class="likefavoriteblock")
            span(class="leftlike")
                //- div(class="ui large header green") "#{moviequotes.moviequote}"
                a(href="/moviequotes" class="ui green left floated link") 
                    i(class="hand point left outline large icon") 
                    div(class="icon-next") Back 
            span(class="rightfavorite")
                form(class="delete-form" action="/moviequotes/" + moviequotes.id + "?_method=DELETE" method="POST")
                    button(class="ui green right floated mini button") Delete
                    a(href="/moviequotes/" + moviequotes.id + "/edit" class="ui green mini right floated button") Edit
        div(class="horizontal-line")
        //- Main content
        div(class="test")
            div(class="item itemMovieQuote") 
                div(class="moviequotecoll default-grey") "#{moviequotes.moviequote}"
        div(class="test")
            div(class="item")
                div(class="movie-name-year default-grey") #{moviequotes.moviename}, #{moviequotes.year}
                div(class="movie-name-year default-grey") #{moviequotes.screenwriter}
        div(class="horizontal-line")
        //- Comments]
    div(class="ui container new-container")
        div(class="ui comments")
            h3(class="ui dividing header") Comments
            div(class="comment")
                div(class="content")
                    a(class="author") Jonathan
                    div(class="metadata")
                        span(class="date") Today at 5:42PM
                    div(class="text") I love this quote. I've watched this movie every Christmas since I was 5 years old. 
                    div(class="actions")
                        a(class="reply") Reply
            div(class="comment")
                div(class="content")
                    a(class="author") Suzanne
                    div(class="metadata")
                        span(class="date") Today at 6:12PM
                    div(class="text") This was my favorite movie and I used to dress up as Dorothy for Halloween. I loved those ruby red shoes.
                    div(class="actions")
                        a(class="reply") Reply
            form(class="ui reply form")
                div(class="field")
                    textarea
                div(class="ui green right floated mini button") Reply

include ../partials/footer