include ../partials/header
include ../partials/menu

block content
  script.
    $(document).ready(function(){
      $('.ui.dropdown') .dropdown();
    });
  div(class="ui container quote-container")
    div(class="header") 
      div(class="ui simple dropdown")
        div(class="text") Sort By
        i(class="dropdown icon")
        div(class="menu")
          div(class="item" data-value="0") Newest
          div(class="item" data-value="1") Movie Name
      div(class="icon-next")
        a(href="/moviequotes/new" class="ui green mini button right floated") New Movie Quote
    //- Grid example 
    div(class="gridcontainer")
      //- Loop 
      each moviequote in moviequotes
        div(class="quoteitem")
          div
            div
            div(class="spacetop")
              i(class="video icon grey")
              div(class="movie-year icon-next default-grey" alt="movie and year") #{moviequote.moviename}, #{moviequote.year}
              div(class="moreinfo")
                a(href="/moviequotes/" + moviequote._id class="link") 
                  i(class="info circle large icon") 
            div(class="spacebottom")
              i(class="pencil alternate icon grey") 
              div(class="icon-next grey" alt="writer") #{moviequote.screenwriter}
            div(class="moviequotecoll default-grey") "#{moviequote.moviequote}"
            div(class="likefavoriteblock")
              span(class="leftlike")
                a(class="link")
                  i(class="like icon") 
                  div(class="icon-next") Like
              span(class="rightfavorite")
                a(class="link")
                  i(class="star icon") 
                  div(class="icon-next") Favorite
            div(class="commentblock")
              span(class="right floated")
                div(class="icon-next") 
                a(href="/moviequotes/" + moviequote._id class="link") 121 Comments 
                  i(class="comment outline icon")
          //- div(class="red ui bottom attached button")
            i(class="add icon") 
            p(class="icon-next") Add Comment //


  //- Cards (To be removed)
    div(class="ui cards grey")
      //- loop through movie quote collection and display each movie quote as a card
      each moviequote in moviequotes
        div(class="card")
          //- votes section
          div(class="extra content")
            span(class="right floated")
              i(class="comment outline icon") 
              div(class="icon-next") 121 Comments
          //- main content i.e. quote, movie, year and writer
          div(class="content")
            //- Remove image function
            //- div(class="ui image")
              img(src=moviequote.movieimage)
            div(class="ui huge header grey")
              h1 #{moviequote.moviequote}
            div
              i(class="video icon grey")
              div(class="movie-year icon-next ui primary grey" alt="movie and year") #{moviequote.moviename}, #{moviequote.year}
            div
              i(class="pencil alternate icon grey") 
              div(class="icon-next grey" alt="writer") #{moviequote.screenwriter}
            div
               a(href="/moviequotes/" + moviequote._id class="btn btn-primary grey") More Info
          //- card footer with likes/favorites
          div(class="extra content")
            span(class="left floated like")
              i(class="like icon") 
              div(class="icon-next") Like
            span(class="right floated star")
              i(class="star icon") 
              div(class="icon-next")  Favorite
          div(class="red ui bottom attached button")
            i(class="add icon") 
            p(class="icon-next") Add Comment//
            
