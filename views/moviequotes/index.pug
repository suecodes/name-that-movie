include ../partials/header
include ../partials/menu

block content
  script.
    $(document).ready(function(){
      $('.ui.dropdown') .dropdown();
    });
  div(class="ui container quote-container")
    div(class="header") 
      div(class="ui simple dropdown")
        div(class="text") Sort By
        i(class="dropdown icon")
        div(class="menu")
          a(class="item" href="/moviequotes/sort?value=moviename") Movie Name
          a(class="item" href="/moviequotes/sort?value=year") Movie Year
      div(class="icon-next")
        a(href="/moviequotes/new" class="ui green mini button right floated") New Movie Quote
    //- Grid example 
    div(class="gridcontainer")
      //- Loop 
      each moviequote in moviequotes
        div(class="quoteitem")
          div
            div(class="spacetop")
              //- Movie & year
              i(class="video icon grey")
              div(class="movie-year icon-next default-grey") #{moviequote.moviename}, #{moviequote.year}
              div(class="moreinfo")
                //- More info
                a(href="/moviequotes/" + moviequote._id class="link") 
                  i(class="eye large icon") 
                  div(class="icon-next") View
            div(class="spacebottom")
              //- screenwriter
              i(class="pencil alternate icon grey") 
              div(class="icon-next grey") #{moviequote.screenwriter}
            //- Movie quote
            div(class="moviequotecoll default-grey") "#{moviequote.moviequote}"
            //- Like / Favorites
            div(class="likefavoriteblock")
              span(class="leftlike")
                a(class="link")
                  i(class="like icon") 
                  div(class="icon-next") Like
              span(class="rightfavorite")
                a(class="link")
                  i(class="star icon") 
                  div(class="icon-next") Favorite
            //- Comments - get count of comments
            div(class="commentblock")
              span(class="right floated")
                div(class="icon-next") 
                a(href="/moviequotes/" + moviequote._id class="link") #{moviequote.comments.length} Comments 
                  i(class="comment outline icon")
            div(class="spacer")

  include ../partials/footer