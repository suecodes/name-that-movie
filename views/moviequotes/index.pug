include ../partials/header
include ../partials/menu

block content
  div(class="ui quote-container")
    div(class="ui huge header") Movie Quotes 
      div(class="icon-next")
        a(href="/moviequotes/new" class="ui red basic button right floated") New Movie Quote
    div(class="ui cards")
      //- loop through movie quote collection and display each movie quote as a card
      each moviequote in moviequotes
        div(class="card")
          //- votes section
          div(class="extra content")
            span(class="right floated")
              i(class="comment outline icon") 
              div(class="icon-next") 121 Comments
          //- main content i.e. quote, movie, year and writer
          div(class="content")
            div(class="ui image")
              img(src=moviequote.movieimage)
            div(class="ui huge header")
              h3 #{moviequote.moviequote}
            div
              i(class="video icon")
              div(class="movie-year icon-next" alt="movie and year") #{moviequote.moviename}, #{moviequote.year}
            div
              i(class="pencil alternate icon") 
              div(class="icon-next" alt="writer") #{moviequote.screenwriter}
            div
              form(class="delete-form" action="/moviequotes/" + moviequote.id + "?_method=DELETE" method="POST")
                button(class="btn btn-xs btn-danger") Delete
          //- card footer with likes/favorites
          div(class="extra content")
            span(class="left floated like")
              i(class="like icon") 
              div(class="icon-next") Like
            span(class="right floated star")
              i(class="star icon") 
              div(class="icon-next")  Favorite
          div(class="red ui bottom attached button")
            i(class="add icon") 
            p(class="icon-next") Add Comment
            