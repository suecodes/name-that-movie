include ../partials/header
include ../partials/menu

block content
	div(class="formcontainer")
		div(class="leftrightfloatblock")
			div(class="leftfloat")
			div(class="rightfloat")
				//- Search box
				form(class="ui form" action="/searchresult" method="POST")
					div(class="ui mini icon input")
						a(href="/search")
						input(type="text" name="searchcriteria" placeholder="Search")
						i(class="inverted search icon blue link")
		div(class="leftrightfloatblock")
			div(class="leftfloat")
				a(href="javascript:history.back()" class="ui blue left floated link")
					i(class="hand point left outline large icon")
					div(class="icon-next") Back
			div(class="rightfloat")
				if currentuser
					a(href="/moviequotes/new" class="bluebuttonsmall floatright") New Movie Quote
		div(class="horizontal-line")
			div(class="spacetop")
				i(class="angle right large icon")
				if moviequotes
					h5(class="icon-next") #{moviequotes.length} results returned
				else
					h5(class="icon-next") 0 results returned
		form(class="ui form" action="/search" method="POST")
			div(class="spacetop")
				if moviequotes
					each moviequote in moviequotes
						div(class="resultfield")
							a(href="/moviequotes/" + moviequote._id class="link")
								h5(class="movienameserif") #{moviequote.moviename}
						div(class="resultfield ")
							h5(class="moviequotesmall") "#{moviequote.moviequote}"
						div(class="resultfield")
							p #{moviequote.year}
						div(class="resultfield")
							p #{moviequote.screenwriter}
						div(class="horizontal-line")
						div(class="spacetop")

include ../partials/footer