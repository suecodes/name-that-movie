include ../partials/header
include ../partials/menu

block content
	div(class="formcontainer")
		form(class="ui form" method="POST")
			div(class="titleheader") 
				div(class="headerlarge floatright") Reset Password
			div(class="horizontal-line")
			div(class="spacetop")
			div(class="formfield")
				div(class="ui pointing below label")  New Password *
				input(type="password" name="password" minlength="8" title="Please include at least 1 uppercase character, 1 lowercase character, and 1 number." pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required)
			div(class="formfield")
				div(class="ui pointing below label") Confirm Password * 
				input(type="password" name="confirm" required)
			div(class="formfield")
				button(class="bluebuttonsmall floatright") Reset Password
script(src="/javascripts/landing.js" type="text/javascript")