include ../partials/header
include ../partials/menu

block content
	div(class="formcontainer")
		form(class="ui form" action="/login" method="POST")
			div(class="titleheader") 
				div(class="ui large header green right floated") Log In
			div(class="horizontal-line")
			div(class="spacetop")
			div(class="formfield")
				div(class="ui pointing below label") Username *
				input(type="text" name="username" required)
			div(class="formfield")
				div(class="ui pointing below label") Password * 
				input(type="password" name="password" required)
			div(class="formfield")
				a(href="/forgotpassword" class="ui link") Forgot password
			div(class="formfield")
				a(href="/register" class="ui link") No account? Sign Up
				button(class="ui green mini button right floated") Log In
script(src="/javascripts/landing.js" type="text/javascript")