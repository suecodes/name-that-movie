include ../partials/header
include ../partials/menu

block content
	div(class="authenticatecontainer")
		form(class="ui form" action="/login" method="POST")
			div(class="titleheader") 
				div(class="headerlarge floatright") Log In
			div(class="horizontal-line")
			div(class="spacetop")
			div(class="formfield")
				div(class="ui pointing below label") Username *
				input(type="text" name="username" required)
			div(class="formfield")
				div(class="ui pointing below label") Password * 
				input(type="password" name="password" required)
			div(class="leftrightfloatblock")
				a(href="/forgotpassword" class="link") Forgot password
				div(class="floatright")
					button(class="bluebuttonsmall" tabindex="0" role="button") Log In
			a(href="/register" class="skipquiz") [No account? Sign Up 
				i(class="arrow alternate circle right large icon") ]
				
script(src="/javascripts/landing.js" type="text/javascript")